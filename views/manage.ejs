<body>
  <div class="jumbotron jumbo-manage">
    <div class="container" style="margin-top: 25;">
      <h1 class="display-3">Manage your items</h1>
    </div>
  </div>
  <div class="container text-center">

    <div class="row availableItem">
      <div class="col-md-3 availableItem-heading">
        <p>Item Name</p>
      </div>
      <div class="col-md-2 availableItem-heading">
        <p>Remaining Quantity</p>
      </div>
      <div class="col-md-3 availableItem-heading">
        <p>Bought on</p>
      </div>
      <div class="col-md-2 availableItem-heading">
        <p>Days to Expire</p>
      </div>
      <div class="col-md-2 availableItem-heading">
      </div>
    </div>
    <div class="row availableItem">
      <hr class="hr-styled">
    </div>
    <ul class="list-group">
      <% for(var i = 0;i<availableItems.length;i++){%>
        <%  if(availableItems[i].quantity>0 && availableItems[i].numDaysToExpire>0 ){%>
          <li class="list-group-item list-group-item-action">
            <form class="" action="/manage" method="post">
              <div class="row">
                <div class="col-md-3">
                  <p><%=availableItems[i].itemName%></p>
                </div>
                <div class="col-md-2 text-center">
                  <input type="number" class="form-control" name="quantity" value="<%=availableItems[i].quantity%>">
                </div>
                <div class="col-md-3">
                  <p><%- helpers.getDate(availableItems[i].dateofBuying); %></p>
                </div>
                <div class="col-md-2">
                  <p><%- helpers.remainingDays(availableItems[i].expiryDate); %></p>
                </div>
                <div class="col-md-2">
                  <button type="submit" class="btn btn-primary btn-md" name="update" value="<%=availableItems[i].dateofBuying%>">Update</button>
                </div>
              </div>
            </form>
          </li>
        <% }%>
      <%}%>
    </ul>

  </div>
