<body>

  <div class="jumbotron jumbo-manage">
    <div class="container" style="margin-top: 25;">
      <h1 class="display-3">Action Pending</h1>
    </div>
  </div>

  <div class="container text-center">
    <div class="row availableItem">
      <div class="col-md-3 availableItem-heading">
        <p>Item Name</p>
      </div>
      <div class="col-md-3 availableItem-heading">
        <p>Last Bought</p>
      </div>
      <div class="col-md-5 availableItem-heading">
        <p>Reason</p>
      </div>
    </div>
    <div class="row availableItem">
      <hr class="hr-styled">
    </div>
    <ul class="list-group">
      <% for(var i = 0;i<toBuyItems.length;i++){%>
          <li class="list-group-item list-group-item-action <% if(toBuyItems[i].reason.length>40){%>
            list-group-item-danger
          <%}%>">
            <form action="/toBuy" method="post">
              <div class="row">
                  <div class="col-md-3">
                    <p><%=toBuyItems[i].itemname%></p>
                  </div>
                  <div class="col-md-3">
                    <p><%- helpers.getDate(toBuyItems[i].lastBought); %></p>
                  </div>
                  <div class="col-md-5" style = "text-align:left;">
                    <p><%=toBuyItems[i].reason%></p>
                  </div>
                  <div class="col-md-1" style = "text-align:left;">
                    <button type="submit" class="btn btn-primary" name="delete" value="<%=toBuyItems[i]._id%>"><i class="fa fa-trash"></i></button>
                  </div>
              </div>
              </form>
          </li>
        <% }%>
    </ul>
  </div>

